<div class="container">
  <div class="row mt-3 mb-5">
    <div class="col-md-6">
      <h1>My Lists:</h1> 
    </div>
    <div class="col-md-6 text-right">
      <a class="btn btn-primary px-5" href="/lists/newlist" role="button">+ Add New List</a>
    </div>
  </div>

  {{#unless lists}}
    <div class="row my-3">
      <div class="col">
        <p class="text-secondary">You don't have any lists yet...</p> 
      </div>
    </div>
  {{/unless}}

  {{!-- {{#each lists}}
  <div class="row my-3">
    <div class="col-md-6">
      <h3>{{listName}}</h3>
      <p>{{listDescription}}</p> 
    </div>
    <div class="col-md-6">
      <a class="btn btn-secondary btn-sm px-3 mr-3" href="/items/listview/{{id}}" role="button">View items</a>
      <a class="btn btn-secondary btn-sm px-3 mr-3" href="/lists/edit/{{id}}" role="button">Edit list</a>
      <a class="btn btn-secondary btn-sm px-3" href="/lists/delete/{{id}}" role="button">Delete list</a>
    </div>
  </div>
  {{/each}} --}}

  {{!-- Lists cards --}}
  <div class="row">
    <div class="col">
      <div class="card-columns">
        {{#each lists}}
        <div class="card shadow">
          <img class="card-img-top" src="">
          <div class="card-body">
            <h5 class="card-title"><a href="/items/listview/{{id}}" class="text-decoration-none text-body">{{listName}}</a></h5>
            <p class="card-text">{{listDescription}}</p>
                <a href="/items/listview/{{id}}" class="btn btn-primary btn-sm mr-3 myWidth-75">View</a>
                <a href="/lists/edit/{{id}}" class="btn btn-secondary btn-sm mr-3 myWidth-75">Edit</a>
                {{!-- <a href="/lists/delete/{{id}}" class="btn btn-danger btn-sm mr-3">Delete</a> --}}

                {{!-- START: Modal popover for delete list confirmation --}}
                {{!-- Button trigger modal --}}
                <button type="button" class="btn btn-danger btn-sm myWidth-75" data-toggle="modal" data-target="#exampleModal{{id}}">
                  Delete
                </button>

                {{!-- Delete list Modal popup confirmation --}}
                <div class="modal fade" id="exampleModal{{id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel{{id}}" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel{{id}}">Delete list</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        Are you sure you want to delete this list?
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No, keep</button>
                        <a href="/lists/delete/{{id}}" class="btn btn-danger">Yes, delete</a>
                      </div>
                    </div>
                  </div>
                </div>
                {{!-- END: Modal popover for delete list confirmation --}}

          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

