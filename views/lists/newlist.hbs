<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h1 class="my-3">Create a New List</h1> 
      <form action="/lists/newlist" method="post">
        <div class="form-group">
          <label class="font-weight-bold" for="listName">List name:</label>
          <input type="text" class="form-control" name="listName">
        </div>
        <div class="form-group">
          <label class="font-weight-bold" for="listDescription">Description:</label>
          <textarea class="form-control" name="listDescription" rows="3"></textarea>
        </div>
        <button class="btn btn-primary myWidth-300" type="submit">Create list</button>
      </form>
    </div>
    <div class="col-lg-4"></div>
  </div>
</div>