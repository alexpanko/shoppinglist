<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <h1 class="text-center">Login</h1>
      <p class="text-center">Don't have an account yet? <a href="/auth/signup">Sign up here</a></p> 
    </div>
    <div class="col-lg-2"></div>
  </div>
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <div class="text-center">
        <a class="btn btn-primary mt-3 myWidth-300" href="/auth/facebook">Login with Facebook</a>
      </div>
      <div class="text-center">
        <a class="btn btn-primary my-3 myWidth-300" href="/auth/google">Login with Google</a>
      </div> 
      <div class="hr-text text-center">
        <hr>
          <span class="bg-white text-secondary font-italic px-2">or...</span>
      </div>
      <div class="d-flex flex-column align-items-center">
        <form class="mt-4" action="/auth/login" method="post">
          <label class="mt-3" for="username">Email:</label><br>
          <input class="myWidth-300 text-secondary p-1" type="text" name="username"><br>
          <label class="mt-3" for="password">Password:</label><br>
          <input class="myWidth-300 text-secondary p-1" type="password" name="password"><br>
          <button class="myWidth-300 btn btn-primary" type="submit">Login</button>
        </form>  
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

