<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h1 class="my-3">Create a New Item</h1> 
      <form action="/items/newitem" method="post">
        <div class="form-group">
          <label class="font-weight-bold" for="itemName">Item name:</label>
          <input type="text" class="form-control" name="itemName">
        </div>
        <div class="form-group">
          <label class="font-weight-bold" for="itemNotes">Notes:</label>
          <textarea class="form-control" name="itemNotes" rows="3"></textarea>
        </div>
        <div class="form-group">
          <label for="listId">Example select</label>
          <select class="form-control" name="listId">
            {{#each lists}}
              <option value={{id}}>{{listName}}</option>
            {{/each}}
          </select>
        </div>
        <button class="btn btn-primary myWidth-300" type="submit">Create item</button>
      </form>
    </div>
    <div class="col-lg-4"></div>
  </div>
</div>



